{{!-- Canvas --}}

<canvas id="simulation-canvas" width="1200" height="800"></canvas> 

{{!-- Timeline --}}

<div class="video-control-container">
    <div class="video-control">
        <div id="previous-container"><img id="previous" src="../assets/icons/forward-solid.svg" style="transform: scaleX(-1);" /></div>
        <div id="play-pause-container">
            <img id="play-btn" src="../assets/icons/play-solid.svg" isPlaying="" srcPlay="../assets/icons/play-solid.svg" srcPause="../assets/icons/pause-solid.svg"/>
            <img id="pause-btn" src="../assets/icons/pause-solid.svg" isPlaying="" srcPlay="../assets/icons/pause-solid.svg" srcPause="../assets/icons/pause-solid.svg" style="display: none;"/>
        </div>
        <div id="next-container"><img id="next" src="../assets/icons/forward-solid.svg" /></div>
    </div>
    <div class="timeline-hans" id="timeline-container">
        <div class="timeline" id="timeline"><div id="timeline-progress"></div></div>
    </div>
    <div id="screenshot">
        <img src="../assets/icons/camera.svg" />
    </div>
    <div class="info">
        <label class="fps">FPS: <span id="current-fps"></span> |</label> 
        <label>Time: <span id="current-time">0</span>s |</label>
        <label>Timepoint: <span id="current-timepoint">0</span></label>
    </div>
</div>


{{!-- Controls --}}

<div class="input-control-container">
    <div class="controls-container">
        <div>
            <label title="Verplaats de simulatie naar een gekozen framenummer">Jump to timepoint:</label>
            <input type="number" id="timepoint-input" value="0" step="100" min="0">
        </div>
         <div>
            <label title="Verplaats de simulatie naar een gekozen tijdstip in seconden">Jump to time (s):</label>
            <input type="number" id="time-input" value="0" step="60" min="0">
        </div>
        <div>
            <label title="Pas de versnelling van de simulatie aan. Speed 1 komt overeen met de werkelijke tijd. ">Speed: <span id="current-speed"></span>x</label>
            <input type="number" id="speed-input" value="0" min="0">
        </div>
        <div>
            <label>Outline:</label>
            <input type="checkbox" id="switch-outline">
        </div>
        <div>
            <button type="button" id="reset-outline">Reset outline</button>
        </div>
    </div>
</div>

{{!--  Description  --}}

<div class="simulation-description-container">
    <h3>Beschrijving</h3>
    <p id="descrition-paragraph"></p>
</div>


