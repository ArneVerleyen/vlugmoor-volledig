{{> header }}
<div class="top-container" >
    <a><p>{{routerLink "home" "terug"}}</p></a>
    <h3>Kind of ship - Size</h3>
    <p>Date: 21-11-2019</p>
</div>

<canvas id="simulation-canvas" width="1200" height="800"></canvas> 
<div class="video-control-container">
    <div class="video-control">
        <div id="previous"><img src="../assets/icons/forward-solid.svg" style="transform: scaleX(-1);" /></div>
        <div id="play-pause"><img src="../assets/icons/play-solid.svg"/></div>
        <div id="next"><img src="../assets/icons/forward-solid.svg" /></div>
    </div>
    <div class="timeline-container" id="timeline-container">
        <div class="timeline" id="timeline"><div id="timeline-progress"></div></div>
    </div>
    <div id="screenshot">
        <img src="../assets/icons/camera.svg" />
    </div>
    <div class="info">
        <label class="fps">FPS: <span id="current-fps"></span> |</label> 
        <label>Time: <span id="current-timepoint">0</span>s</label>
    </div>
</div>
<div class="input-control-container">
    <div class="input-container">
        <div>
            <label>Case Data (*.xlsx)</label>
            <label class="custom-upload">
                <span id="metadata-input-bg"></span>
                <p id="metadata-input-label">Bestand kiezen</p>
                <input type="file" id="metadata-input" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"/>
            </label>
        </div>
        <div>
            <label>Forces Data (*.csv)</label>
            <label class="custom-upload">
                <span id="forces-input-bg"></span>
                <p id="forces-input-label">Bestand kiezen</p>
                <input type="file" id="forces-input" />
            </label>
        </div>
        <div>
            <label>Ship coordinates (*.csv)</label>
            <label class="custom-upload">
                <span id="coords-input-bg"></span>
                <p id="coords-input-label">Bestand kiezen</p>
                <input type="file" id="coords-input" />
            </label>
        </div>
        <div class="btn-submit">
            <button type="button" id="submit">Submit</button>
        </div>
    </div>

    <div class="controls-container">
        <div>
            <label>Jump to:</label>
            <input type="number" id="timepoint-input" value="0" step="100">
        </div>
        <div>
            <label>Speed:<span id="current-speed"></span></label>
            <input type="number" id="speed-input" value="0">
        </div>
        <div>
            <label>Outline:</label>
            <input type="checkbox" id="switch-outline">
        </div>
    </div>
</div>

<div class='upload-container'>
    <div class="btn-submit">
        <button type="button" id="upload">Upload to server</button>
    </div>
    <div class="upload-fields">
        <label for="title">Title:</label>
        <div>
            <input type="text">
        </div>
        <div>
            <label for="title">Description:</label>
        </div>
        <div>
            <textarea rows="6" cols="60" type='text'>
            </textarea>
        </div>
        <label for="title">Date:</label>
        <div>
            <input type="date">
        </div>
    </div>
</div>

{{> footer }}

